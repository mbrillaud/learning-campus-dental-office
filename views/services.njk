{% extends "./layout.njk" %}

{% block content %}
    <div class="services-presentation full">
        <h1 class="text-center pt-5 pb-5">Nos services</h1>
        <ul>
            {% for service in services %}
                {% if loop.index > 1 %}
                    <li>
                        <h4>{{service.label}}</h4>
                        <p>{{service.description}}</p>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}