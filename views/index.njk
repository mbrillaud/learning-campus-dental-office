{% extends "./layout.njk" %}

{% block content %}
<div id="office" class="carousel slide home-slider" data-ride="carousel" data-interval="3000">
  <ol class="carousel-indicators">
    <li data-target="#office" data-slide-to="0" class="active"></li>
    <li data-target="#office" data-slide-to="1"></li>
    <li data-target="#office" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://via.placeholder.com/800x400?text=Slide+1" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://via.placeholder.com/800x400?text=Slide+2" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://via.placeholder.com/800x400?text=Slide+3" class="d-block w-100" alt="...">
    </div>
  </div>
</div>

    <div class="services-presentation">
        <h1 class="text-center pt-5 pb-5">Nos services</h1>
        <ul>
            {% for service in services %}
            <li>
                <h4>{{service.label}}</h4>
                <p>{{service.description}}</h4>
            </li>
            {% endfor %}
        </ul>
    </div>
    <a href="/appointment" class="btn btn-primary get-appointment">Prendre rendez-vous</a>
{% endblock %}